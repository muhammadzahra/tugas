<h3>Tambah Kamar</h3>
<hr>
<form action="/admin/kamar/add" method="post">
    <div class="form-group">
        <label for="inputNomer">nomer</label>
        <input type="text" name="nomer" placeholder="Masukkan Nomer" id="inputNomer" class="form-control col-4">
    </div>
    <div class="form-group">
        <label for="inputLantai">lantai</label>
        <input type="text" name="lantai" placeholder="Masukkan lantai" id="inputLantai" class="form-control col-4">
    </div>
    <div class="form-group">
        <label for="inputFasilitas">fasilitas</label>
        <input type="text" name="fasilitas" placeholder="Masukkan fasilitas" id="inputFasilitas"
            class="form-control col-4">
    </div>
    <button type="submit" class="btn btn-primary">Simpan</button>
    <a href="/admin/kamar" class="btn btn-default">Kembali</a>
</form>